{% extends 'layout.twig' %}

{% block body %}
    <div class="col-lg-2 sidebar">
        <nav class="left-menu">
            <a class="btn {% if label == 'football' or label == false %} active {% endif %}" href="/teams/football"><i
                        class="fas fa-futbol"></i>Football</a>
            <a class="btn {% if label == 'basketball' %} active {% endif %}" href="/teams/basketball"><i
                        class="fas fa-basketball-ball"></i>Basketball</a>
            <a class="btn {% if label == 'hockey' %} active {% endif %}" href="/teams/hockey"><i
                        class="fas fa-hockey-puck"></i>Hockey</a>
            <a class="btn {% if label == 'volleyball' %} active {% endif %}" href="/teams/volleyball"><i
                        class="fas fa-volleyball-ball"></i>Volleyball</a>
        </nav>
    </div>
    <div class="col-lg-10">
        <div class="teams">
            {% for team in teams %}
                <div>
                    <p class="lead">{{ team.l }}</p>
                    {% for teamName in team.teams %}
                        <a href="/teams/{{ label }}/{{ teamName }}">{{ teamName }}</a>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}